<Page x:Class="LearningBot.UI.Views.UserListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="UserListView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Applied Users"/>
        <Label Grid.Row="0" Grid.Column="1" Content="Approved Users"/>
        <ListBox Grid.Row="1" Grid.Column="0" ItemsSource="{Binding AppliedUsers}" DisplayMemberPath="FullName" SelectedItem="{Binding SelectedUser}"/>
        <ListBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding ApprovedUsers}" DisplayMemberPath="FullName" SelectedItem="{Binding SelectedUser}"/>
        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Command="{Binding EditUserCommand}" Content="Edit User"/>
    </Grid>
</Page>
